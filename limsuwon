  FILE *movie_log=fopen("movie_log.txt","rw"); FILE *movie_list=fopen("movie_list.txt","rw"); FILE *director_log=fopen("director_log.txt","rw"); FILE *director_list=fopen("director_list.txt","rw"); FILE *actor_log=fopen("actor_log.txt","rt"); FILE *actor_list=fopen("actor_list.txt","rt");  printf(">> Welcome to My Movie <<\n"); printf("File loading.....\n"); printf("You can use add, update, delete, search, sort, save, end commands\n"); printf("(movie)"); fscanf(stdin,"%s%s",com,com2); fflush(stdin); printf("%s%s",com,com2);  if(com=='add'){  printf("\ntitle>");  scanf("%s",movie.title);  fprintf(movie_list,"serial_number:%s",movie.title);    printf("\ngenre>");  scanf("%s",movie.genre);  fprintf(movie_list,":%s",movie.genre);    printf("\ndirector>");  scanf("%s",movie.title); // fprintf(movie_list,"serial_number:%s",a);    printf("\nyear>");  scanf("%s",movie.title);  fprintf(movie_list,"serial_number:%s",movie.title);    printf("\nrun time>");  scanf("%s",movie.title);  fprintf(movie_list,"serial_number:%s",movie.title);    printf("\nactors>");  scanf("%s",movie.title);  fprintf(movie_list,"serial_number:%s",movie.title);    printf("\n@@DONE");     } return 0;}
